{
    "author" : "Ludovic.F, Tim Auton",
    "category" : "support_external_dev",
    "singleton": true,
    "maturity" : "beta",
    "version" : "0.98",
    "moduleName" : "Hue",
    "dependencies": [],
    "homepage": "https://github.com/timauton/Hue",
    "icon": "icon.png",
    "repository": {
      "type": "git",
      "source": "https://github.com/timauton/Hue"
    },
    "defaults": {
        "title": "__m_title__",
        "description": "__m_descr__"
    },
    "schema": {
      "type": "object",
      "required": true,
      "properties" : {
        "ip": {
          "type": "string",
          "required": true
        },
        "key": {
            "format": "string",
            "required": false
        },                                                     
        "importScenes": {
            "type": "boolean",
            "required": false,
            "default" : false
        },
        "homebridgeSkip": {
            "type": "boolean",
            "required": false,
            "default" : true
        },
        "transitionTime": {
            "type": "integer",
            "required": true,
            "minimum": 1
        }
      }
    },
    "options": {
        "fields" : {
          "ip": {
              "label": "IP",
              "placeholder": "Enter local bridge ip like: 192.168.1.10"
          },
          "key": {
              "label": "__l_key__",
              "helper": "__h_key__"
          }, 
          "importScenes": {
              "type": "checkbox",
              "rightLabel": "__l_import_scenes__",
              "helper": "Import All Scenes by Group Define With Hue App"
          },
          "homebridgeSkip": {
              "type": "checkbox",
              "rightLabel": "Add a Homebridge.Skip tag to all elements",
              "helper": "This avoids duplicates as Hue devices will also appear in Homekit via the Hue hub."
          },
          "transitionTime": {
          		"type": "integer",
          		"label": "Transition time",
          		"helper": "Time to transition between brightness levels, in tenths of a second (e.g. 4 means 0.4s)."
          }
        }
    }
}
