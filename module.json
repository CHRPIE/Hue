{
    "author" : "Ludovic.F, Tim Auton",
    "category" : "support_external_dev",
    "singleton": true,
    "maturity" : "stable",
    "version" : "1.0",
    "moduleName" : "Hue",
    "dependencies": [],
    "homepage": "https://github.com/timauton/Hue",
    "icon": "icon.png",
    "repository": {
      "type": "git",
      "source": "https://github.com/timauton/Hue"
    },
    "defaults": {
        "title": "__m_title__",
        "description": "__m_descr__",
        "transitionTime": 4
    },
    "schema": {
      "type": "object",
      "required": true,
      "properties" : {
        "ip": {
          "type": "string",
          "required": true
        },
        "key": {
            "format": "string",
            "required": false
        },                                                     
        "importScenes": {
            "type": "boolean",
            "required": false,
            "default" : false
        },
        "createHueSat": {
            "type": "boolean",
            "required": false,
            "default" : true
        },
        "createXY": {
            "type": "boolean",
            "required": false,
            "default" : false
        },
        "dontSendOn": {
            "type": "boolean",
            "required": false,
            "default" : false
        },
        "homebridgeSkip": {
            "type": "boolean",
            "required": false,
            "default" : true
        },
        "transitionTime": {
            "type": "integer",
            "required": true,
            "minimum": 1
        }
      }
    },
    "options": {
        "fields" : {
          "ip": {
              "label": "__l_ip__",
              "placeholder": "__p_ip__"
          },
          "key": {
              "label": "__l_key__",
              "helper": "__h_key__"
          }, 
          "importScenes": {
              "type": "checkbox",
              "rightLabel": "__l_import_scenes__",
              "helper": "__h_import_scenes__"
          },
          "createHueSat": {
              "type": "checkbox",
              "rightLabel": "__l_create_hue_sat__",
              "helper": "__h_create_hue_sat__"
          },
          "createXY": {
              "type": "checkbox",
              "rightLabel": "__l_create_xy__",
              "helper": "__h_create_xy__"
          },
          "dontSendOn": {
              "type": "checkbox",
              "rightLabel": "__l_dont_send_on__",
              "helper": "__h_dont_send_on__"
          },
          "homebridgeSkip": {
              "type": "checkbox",
              "rightLabel": "__l_homebridge_skip__",
              "helper": "__h_homebridge_skip__"
          },
          "transitionTime": {
          		"type": "integer",
          		"label": "__l_transition_time__",
          		"helper": "__h_transition_time__"
          }
        }
    }
}
